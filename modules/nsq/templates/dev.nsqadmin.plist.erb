<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.nsqadmin</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>NSQ Admin Web UI.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "nsq::config::bindir" %>/nsqadmin</string>
      <string>-template-dir=<%= scope.lookupvar "nsq::config::templatedir" %></string>
      <string>-http-address=<%= scope.lookupvar "nsq::config::nsqadminhttpaddress" %>:<%= scope.lookupvar "nsq::config::nsqadminhttpport" %></string>
      <string>-lookupd-http-address=<%= scope.lookupvar "nsq::config::nsqlookupdhttpaddress" %>:<%= scope.lookupvar "nsq::config::nsqlookupdhttpport" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "nsq::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqadmin.error.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqadmin.log</string>

  </dict>
</plist>
