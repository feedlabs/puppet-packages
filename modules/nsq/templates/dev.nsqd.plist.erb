<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.nsqd</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Realtime distributed message processing daemon.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "nsq::config::bindir" %>/nsqd</string>
      <string>-data-path=<%= scope.lookupvar "nsq::config::datadir" %></string>
      <string>-http-address=<%= scope.lookupvar "nsq::config::nsqdhttpaddress" %>:<%= scope.lookupvar "nsq::config::nsqdhttpport" %></string>
      <string>-tcp-address=<%= scope.lookupvar "nsq::config::nsqdtcpaddress" %>:<%= scope.lookupvar "nsq::config::nsqdtcpport" %></string>
      <string>-lookupd-tcp-address=<%= scope.lookupvar "nsq::config::nsqlookupdtcpaddress" %>:<%= scope.lookupvar "nsq::config::nsqlookupdtcpport" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "nsq::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqd.error.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqd.log</string>

  </dict>
</plist>
