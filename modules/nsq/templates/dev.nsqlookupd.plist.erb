<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.nsqlookupd</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>NSQ topology management daemon.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "nsq::config::bindir" %>/nsqlookupd</string>
      <string>-http-address=<%= scope.lookupvar "nsq::config::nsqlookupdhttpaddress" %>:<%= scope.lookupvar "nsq::config::nsqlookupdhttpport" %></string>
      <string>-tcp-address=<%= scope.lookupvar "nsq::config::nsqlookupdtcpaddress" %>:<%= scope.lookupvar "nsq::config::nsqlookupdtcpport" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "nsq::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqlookupd.error.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "nsq::config::logdir" %>/nsqlookupd.log</string>

  </dict>
</plist>
